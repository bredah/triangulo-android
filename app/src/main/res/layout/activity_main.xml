<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="bredahe.calculadora.MainActivity">

    <EditText
        android:id="@+id/valor_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="@string/valor_a"
        android:inputType="textPersonName"
        android:onClick="clickValorA" />

    <EditText
        android:id="@+id/valor_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/valor_a"
        android:ems="10"
        android:hint="@string/valor_b"
        android:inputType="textPersonName"
        android:onClick="clickValorB" />

    <EditText
        android:id="@+id/valor_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/valor_b"
        android:ems="10"
        android:hint="@string/valor_c"
        android:inputType="textPersonName"
        android:onClick="clickValorC" />

    <Button
        android:id="@+id/button_validar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/valor_c"
        android:onClick="clickValidar"
        android:text="@string/validar" />

    <TextView
        android:id="@+id/textResult"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button_validar"
        android:text="X"
        android:textAlignment="center"
        android:textSize="20dp" />
</RelativeLayout>
